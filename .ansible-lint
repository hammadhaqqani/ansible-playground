# Ansible-lint configuration for playground/example repository
# This is a collection of Ansible examples and demos, not production code.
# Skip rules that are irrelevant or impractical to fix in example playbooks.

skip_list:
  # FQCN rules - examples use short module names for readability
  - fqcn[action-core]
  - fqcn[action]
  # Free-form syntax - used extensively in examples for brevity
  - no-free-form
  # Naming conventions - examples use varied naming styles intentionally
  - name[casing]
  - name[missing]
  - role-name
  - var-naming[no-role-prefix]
  # File permissions - not relevant for example playbooks
  - risky-file-permissions
  # Changed-when - example commands don't need idempotency guards
  - no-changed-when
  # Jinja spacing - legacy style used throughout
  - jinja[spacing]
  # YAML truthy - examples use yes/no for readability
  - yaml[truthy]
  # Command/shell module rules - examples demonstrate both intentionally
  - command-instead-of-module
  - command-instead-of-shell
  # Ignore-errors used intentionally in some examples
  - ignore-errors
  # Key ordering - not enforced for examples
  - key-order[task]
  # Args module - legacy argument style in examples
  - args[module]
  # Deprecated syntax - legacy examples preserve original Ansible patterns
  - deprecated-bare-vars
  - deprecated-local-action
  - deprecated-command-syntax
  - deprecated-module
  # Package version pinning - examples use state=latest for simplicity
  - package-latest
  - latest[git]
  # Schema validation - some examples use legacy playbook formats
  - schema[playbook]
  - schema[tasks]
  # Variable naming in roles - examples don't follow prefix conventions
  - var-naming

warn_list:
  - yaml[line-length]
  - yaml[octal-values]
